@{
    ViewData["Title"] = "Ajout d'un Contact";
}
@model Contact

<form asp-action="SubmitContact" asp-controller="Contact">
    <div class="mb-3">
        <label asp-for="@Model.FirstName" class="form-label">Prénom</label>
        <input asp-for="@Model.FirstName" type="text" class="form-control" id="prenom">
    </div>
    <div class="mb-3">
        <label asp-for="@Model.LastName" class="form-label">Nom</label>
        <input asp-for="@Model.LastName" type="text" class="form-control" id="nom">
    </div>
    <div class="mb-3">
        <label asp-for="@Model.Email" class="form-label">Email</label>
        <input asp-for="@Model.Email" type="email" class="form-control" id="email">
    </div>
    <div class="mb-3">
        <label asp-for="@Model.Phone" class="form-label">Téléphone</label>
        <input asp-for="@Model.Phone" type="tel" class="form-control" id="phone">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>