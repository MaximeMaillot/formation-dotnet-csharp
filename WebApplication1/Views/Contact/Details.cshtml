@{
    ViewData["Title"] = "Détails pour un Contact";
    Contact c = Model;
}
@model Contact

@if (Model == null) // si le model est égal à null, ça veut dire que l'on a pas trouvé de contact avec cet id
{
    <p class="text-danger">
        Aucun contact avec cet Id !!!
    </p>
}
else
{
    <div class="card m-3 p-2" style="width: 300px;">
        <div class="card-title text-center"><h5>@c.FirstName @c.LastName.ToUpper()</h5> </div>
        <hr />
        <div class="card-body">
            <p class="mail">Email : @c.Email</p>
            <p class="mail">@Html.DisplayNameFor(m => m.Email) : @c.Email</p>
            @*le html helper DisplayNameFor va aller chercher la valeur de la data annotation Display pour le model*@
            <p class="phone">Téléphone : @c.Phone</p>
            <p class="phone">@Html.DisplayNameFor(m => m.Phone) : @c.Phone</p>
        </div>
    </div>
}

<a asp-action="Index" asp-asp-controller="Contact" class="btn btn-success">Retourner à la liste de contacts</a>