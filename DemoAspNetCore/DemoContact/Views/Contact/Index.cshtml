@{
    ViewData["Title"] = "Details";
    List<Contact> contacts = Model;
}
@model List<Contact>

<h1>@ViewData["Title"]</h1>
<div class="container-fluid">
    <table class="table table-dark">
        <thead>
            <tr>
                <th scope="col">@Html.DisplayNameForInnerType((Contact m)  => m.Id)</th>
                <th scope="col">@Html.DisplayNameForInnerType((Contact m)  => m.FirstName)</th>
                <th scope="col">@Html.DisplayNameForInnerType((Contact m)  => m.LastName)</th>
                <th scope="col">Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Contact contact in contacts)
            {
                <tr>
                    <th scope="row">@contact.Id</th>
                    <td>@contact.FirstName</td>
                    <td>@contact.LastName</td>
                    <td><a class="btn btn-warning" asp-controller="Contact" asp-action="Delete">Delete</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>
