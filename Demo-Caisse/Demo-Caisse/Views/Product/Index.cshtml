@{
    ViewData["Title"] = "Liste des Produits";
}

@model List<Product>

<a asp-action="FormAdd" asp-controller="Product">Ajouter un Produit</a>

<table class="table">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Image</th>
            <th scope="col">@Html.DisplayNameForInnerType((Product c) => c.Name)</th>
            <th scope="col">@Html.DisplayNameForInnerType((Product c) => c.Category)</th>
            <th scope="col" colspan="4">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Product p in Model)
        {
            <tr>
                <th scope="row">@p.Id</th>
                <th><img src="@p.ProductUrl" alt="@p.Name" style="height: 40px"/></th>
                <td>@p.Name</td>
                <td>@p.Category.Name</td>
                <td><a asp-action="Delete" asp-controller="Product" asp-route-id="@p.Id" class="btn btn-danger">Supprimer</a></td>
                <td><a asp-action="FormUpdate" asp-controller="Product" asp-route-id="@p.Id" class="btn btn-warning">Modifier</a></td>
                <td><a asp-action="ShowDetails" asp-controller="Product" asp-route-id="@p.Id" class="btn btn-info">Details</a></td>
                <td><a asp-action="AddToCart" asp-controller="Product" asp-route-id="@p.Id" class="btn btn-dark">Ajouter Aux Favoris</a></td>
            </tr>
        }
    </tbody>
</table>