@{
    ViewData["Title"] = "Mettre à jour un produit";
    Product p = Model;
}

@model Product

<h1>@(Model == null ? "Ajout" : "Modification") d'un produit</h1>

<form asp-action="SubmitProduct" asp-controller="Product" enctype="multipart/form-data">
    <div hidden>
        <div class="text-danger">@Html.ValidationSummary()</div>
        <input asp-for="Id" type="text" class="form-control" hidden>
    </div>
    <div class="mb-3">
        <label asp-for="Name" class="form-label">@Html.DisplayNameFor(c => c.Name)</label>
        <input asp-for="Name" type="text" class="form-control">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Description" class="form-label">@Html.DisplayNameFor(c => c.Description)</label>
        <input asp-for="Description" type="text" class="form-control">
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Price" class="form-label">@Html.DisplayNameFor(c => c.Price)</label>
        <input asp-for="Price" type="text" class="form-control">
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Quantity" class="form-label">@Html.DisplayNameFor(c => c.Quantity)</label>
        <input asp-for="Quantity" type="text" class="form-control">
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="CategoryId" class="control-label"> @Html.DisplayNameFor(c => c.Category) </label>
        <select asp-for="CategoryId" asp-items="ViewBag.Categories"></select>
        <span asp-validation-for="CategoryId" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="ProductUrl" class="form-label">@Html.DisplayNameFor(c => c.ProductUrl)</label>
        <input type="file" name="productImg" class="form-control">
    </div>
    <button type="submit" class="btn btn-primary">@(Model == null ? "Ajouter" : "Modifier")</button>
</form>